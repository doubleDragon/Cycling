<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <attr name="icon" format="reference"></attr>
    <attr name="color" format="color"></attr>
    <attr name="text" format="string"></attr>
    <attr name="textSize" format="dimension"></attr>
    
    <attr name="tipResource" format="reference"/>
    <declare-styleable name="BadgeView">
        <attr name="tipResource"/>
    </declare-styleable>
    
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    
    <!-- Attributes for RoundedCornerImageView -->
    <declare-styleable name="RoundedCornerImageView">
        <!-- Corner radius -->
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color_color" format="color" />
    </declare-styleable>
    
    <!-- PullListView custom attr -->
    <declare-styleable name="PullListView">
        <attr name="getMoreType">
            <enum name="auto" value="0" />
            <enum name="click" value="1" />
        </attr>
        <attr name="addPullHeaderByUser" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="IndicatorItem">
        <attr name="icon"/>
        <attr name="color"/>
        <attr name="text"/>
        <attr name="textSize"/>
    </declare-styleable>
</resources>

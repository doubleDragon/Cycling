<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Default" parent="@android:style/Theme"></style>
    <style name="Theme.NoTitle" parent="@android:style/Theme.NoTitleBar"></style>
    <style name="Theme.FullScreen" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>
    
    <style name="ActivityHeaderTextStyle">
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	</style>
	
    <style name="EditorActivityTextStyle">
        <item name="android:textColor">#b1b1b1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="EditorActivityEditTextStyle">
        <item name="android:background">@drawable/issue_editor_fragment_edittext</item>
        <item name="android:padding">6dip</item>
    </style>
    
    <style name="IssueListTextStyle">
        <item name="android:textColor">#b1b1b1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="HeaderLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/headerlayout_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/headerlayout_background</item>
    </style>
    
    <style name="HeaderLayoutItem">
        <item name="android:layout_width">@dimen/headerlayout_item_width</item>
        <item name="android:layout_height">@dimen/headerlayout_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">1px</item>
    </style>
    <style name="HeaderLayoutHomeItem" parent="HeaderLayoutItem">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>
    <style name="HeaderLayoutHomeLogo">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>

</resources>

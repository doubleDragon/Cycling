<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.android.cycling.widget.HeaderLayout
        android:id="@+id/header_layout"
            style="@style/HeaderLayout"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dip"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            style="@style/EditorActivityTextStyle"/>
        
        <com.android.cycling.widget.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_width_setting_fragment"
            android:layout_height="@dimen/avatar_height_setting_fragment"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:src="@drawable/head_now" />
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/editor_activity_divide"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="名字"
            style="@style/EditorActivityTextStyle"/>
        
        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:hint="请输入名字"
            android:layout_alignParentRight="true"
            style="@style/EditorActivityEditTextStyle"
            />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/editor_activity_divide"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            style="@style/EditorActivityTextStyle"/>
        
        <EditText
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:hint="请输入性别"
            android:layout_alignParentRight="true"
            style="@style/EditorActivityEditTextStyle"
            />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/editor_activity_divide"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="年龄"
            style="@style/EditorActivityTextStyle"/>
        
        <EditText
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:hint="请输入年龄"
            android:layout_alignParentRight="true"
            style="@style/EditorActivityEditTextStyle"
            />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/editor_activity_divide"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="地区"
            style="@style/EditorActivityTextStyle"/>
        
        <EditText
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:hint="请输入地区"
            android:layout_alignParentRight="true"
            style="@style/EditorActivityEditTextStyle"
            />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/editor_activity_divide"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="个性签名"
            style="@style/EditorActivityTextStyle"/>
        
        <EditText
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:hint="请输入签名"
            android:layout_alignParentRight="true"
            style="@style/EditorActivityEditTextStyle"
            />
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/editor_activity_divide" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/EditorActivityTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dip"
            android:text="@string/my_photo" />

        <com.android.cycling.widget.SimpleGridView
            android:id="@+id/pictureList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:cacheColorHint="@android:color/transparent"
            android:gravity="center"
            android:horizontalSpacing="3dip"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="3dip" />
    </LinearLayout>
</LinearLayout>

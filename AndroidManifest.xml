<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.cycling"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <application
        android:name=".CyclingApplication"
        android:allowBackup="true"
        android:icon="@drawable/cycling_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:label="@string/registe"
        	android:name=".activities.RegisteActivity" >
        </activity>
        
        <activity 
        	android:name=".activities.IssueEditorActivity">
        </activity>
        <activity 
        	android:name=".activities.SelectPicturesActivity">
        </activity>
        
        <service android:name="CycingSaveService"
            android:exported="false"/>
        
        <provider android:name=".provider.CyclingProvider"
            android:authorities="com.android.cycling"
            android:exported="false">
            <grant-uri-permission android:pathPattern=".*" />
        </provider>
    </application>

</manifest>
